{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
    },
    "include": [
        "src/*",
    ],
    "exclude": [
        "node_modules",
    ],
}